@model NøstedProsjekt.Models.ServiceOrder

<h1>Lag en service ordre</h1>

<form asp-action="CreateServiceOrder" method="post">
   
    <!-- Customer Information -->
    <label asp-for="Customer">Kunde:</label>
    <input asp-for="Customer" class="form-control" />

    <label asp-for="RecivedDate">Mottat dato:</label>
    <input asp-for="RecivedDate" class="form-control" />

    <label asp-for="Address">Adresse:</label>
    <input asp-for="Address" class="form-control" />

    <label asp-for="EmailAddress">Email Address:</label>
    <input asp-for="EmailAddress" class="form-control" />

    <!-- Product Details -->
    <label asp-for="Id">Ordrenummer:</label>
    <input asp-for="Id" class="form-control" />

    <label asp-for="PhoneNumber">Telefon:</label>
    <input asp-for="PhoneNumber" class="form-control" />

    <!-- Service Details -->
    <label asp-for="ProductType">Produkttype:</label>
    <input asp-for="ProductType" class="form-control" />

    <label asp-for="YearModell">Årsmodell:</label>
    <input asp-for="YearModell" class="form-control" />

    <!-- Customer Information -->
    <label asp-for="Insurance">Service/rep: 
    Garanti:</label>
    <input asp-for="Insurance" class="form-control" />

    <label asp-for="SerialNumber">Serienummer:</label>
    <input asp-for="SerialNumber" class="form-control" />

    <label asp-for="WhatIsPlanned">Hva er avtalt med kunden?</label>
    <input asp-for="WhatIsPlanned" class="form-control" />

    <label asp-for="OperationDescription">Reperasjonsbeskrivelse:</label>
    <input asp-for="OperationDescription" class="form-control" />

    <label asp-for="UsedParts">Medgåtte deler:</label>
    <input asp-for="UsedParts" class="form-control" />

    <label asp-for="WorkHours">Arbeidstimer:</label>
    <input asp-for="WorkHours" class="form-control" />

    <label asp-for="FinishedDate">Ferdigstilit dato:</label>
    <input asp-for="FinishedDate" class="form-control" />

    <label asp-for="UsedPartsReturned">Utskiftet deler returnert:</label>
    <input asp-for="UsedPartsReturned" class="form-control" />

    <label asp-for="ShippingMethod">Forsendelsesmåte:</label>
    <input asp-for="ShippingMethod" class="form-control" />

    <label asp-for="SignCustomer">Sign. kunde:</label>
    <input asp-for="SignCustomer" class="form-control" />

    <label asp-for="SignMechanic">Sign. reparatør:</label>
    <input asp-for="SignMechanic" class="form-control" />

    <button type="submit">Create</button>
</form>
