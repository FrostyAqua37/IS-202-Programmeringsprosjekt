@model NøstedProsjekt.Models.ServiceOrder

<h1>Lag en service ordre</h1>

<form asp-action="CreateServiceOrder" method="post">
   
    <!-- Customer Information -->
    <label asp-for="FirstName">First Name:</label>
    <input asp-for="FirstName" class="form-control" />

    <label asp-for="LastName">Last Name:</label>
    <input asp-for="LastName" class="form-control" />

    <label asp-for="PhoneNumber">Phone Number:</label>
    <input asp-for="PhoneNumber" class="form-control" />

    <label asp-for="EmailAddress">Email Address:</label>
    <input asp-for="EmailAddress" class="form-control" />

    <!-- Product Details -->
    <label asp-for="ProductName">Product Name:</label>
    <input asp-for="ProductName" class="form-control" />

    <label asp-for="ProductType">Product Type:</label>
    <input asp-for="ProductType" class="form-control" />

    <!-- Service Details -->
    <label asp-for="PreferredTimePeriod">Preferred Time Period:</label>
    <input asp-for="PreferredTimePeriod" class="form-control" />

    <label asp-for="Comment">Comment:</label>
    <input asp-for="Comment" class="form-control" />

    <button type="submit">Create</button>
</form>
